#include <stdio.h>
#include <stdlib.h>

int main() {
    int secretNumber, guess, attempts = 0, maxAttempts;

    secretNumber = 42;  // fixed secret number
    maxAttempts = 5;    // total chances given to user

    printf("Welcome to Number Guessing Game!\n");
    printf("You have %d attempts to guess the number.\n\n", maxAttempts);

    while (attempts < maxAttempts) {
        printf("Enter your guess: ");
        scanf("%d", &guess);

        attempts++;

        if (guess == secretNumber) {
            printf("\n Congratulations! You guessed the correct number in %d attempts.\n", attempts);
            printf("You WIN!\n");
            return 0;
        }
        else if (guess > secretNumber) {
            printf("Too high! Try a smaller number.\n");
        }
        else {
            printf("Too low! Try a larger number.\n");
        }

        printf("Attempts left: %d\n\n", maxAttempts - attempts);
    }

    printf("\n‚ùå Game Over! You have used all attempts.\n");
    printf("The correct number was: %d\n", secretNumber);
    printf("You LOSE!\n");

    return 0;
}
